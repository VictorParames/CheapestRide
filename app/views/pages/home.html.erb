<h2>pure JS form</h2>

<form id="search" data-controller="search" data-search-token-value="<%= ENV["MAPS_KEY"] %>" class="d-flex my-5">
            <input type="text" class="form-control flex-grow-1 me-2" placeholder="Type an address">
            <input type="submit" value="Geocode!" class="btn btn-primary">
</form>

<h2>simple form</h2>

<div>
<%= simple_form_for [@destin], html: {class: "d-flex"} do |d| %>
  <%= d.input :dropoff_location %>
  <%= d.submit %>
<% end %>

</div>


<div data-controller="map" id="map" class="map" data-map-origin-value="<%= @origin.to_json %>" data-map-destination-value="<%= @destination.to_json %>"></div>
