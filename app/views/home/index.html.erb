<!-- Fullscreen Container with Dark Overlay -->
<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 bg-dark position-relative">
  <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0, 0, 0, 0.6);"></div>

  <!-- Card Container -->
  <div class="text-center bg-white p-5 rounded-4 shadow-lg position-relative d-flex flex-column align-items-center" style="max-width: 1000px; width: 90%;">

    <!-- User Photo -->
    <div class="mb-4">
      <%= image_tag "user-placeholder.jpg", class: "rounded-circle shadow border border-3 border-white", alt: "User Photo", width: 120 %>
    </div>

    <!-- Main Heading -->
    <h1 class="display-4 fw-bold text-dark mb-3">Para onde vamos?</h1>

    <!-- Subheading -->
    <p class="lead text-secondary mb-4">Descubra seu próximo destino de forma fácil, rápida e segura.</p>

    <!-- Call to Action Button -->
    <%= link_to new_ride_path, class: "btn btn-dark btn-lg px-4 py-3 fw-bold shadow rounded-pill d-flex align-items-center gap-2 transition-transform hover-scale" do %>
      <i class= "fas fa-location-arrow"</i> Bora!
    <% end %>
  </div>
</div>

<!-- Additional Styles for Animations & Alignment -->
<style>
  .hover-scale {
    transition: transform 0.2s ease-in-out;
  }
  .hover-scale:hover {
    transform: scale(1.05);
  }
  .gap-2 {
    gap: 8px;
  }
</style>
