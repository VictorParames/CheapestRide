<!DOCTYPE html>
<html>
<head>
  <title>CheapestRide</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="container">
    <h1>Onde vamos?</h1>
    <button class="search-button" onclick="openModal()">Bora</button>
  </div>

  <!-- Modal para Origem e Destino -->
  <div id="searchModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>Onde vamos?</h2>
      <div class="input-group">
        <label for="origin">Origem</label>
        <input type="text" id="origin" name="origin" placeholder="Digite sua origem">
      </div>
      <div class="input-group">
        <label for="destination">Destino</label>
        <input type="text" id="destination" name="destination" placeholder="Digite seu destino">
      </div>
      <button class="search-button" onclick="closeModal()">Bora</button>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById('searchModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('searchModal').style.display = 'none';
    }
  </script>
</body>
</html>
