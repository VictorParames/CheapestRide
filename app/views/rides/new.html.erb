



<h1 class="text-center text-dark font-weight-bold display-3 mb-5 mt-4">Request a Ride</h1>

<div class="container p-4 bg-dark">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <div class="card shadow-lg border-0 rounded-4 p-4 bg-light">
        <div class="card-body">
          <%= simple_form_for @ride do |r| %>

            <!-- Pickup Field -->
            <div class="form-group mb-4">
              <%= r.label :pickup, "Pickup Location", class: "form-label" %>
              <%= r.input :pickup,
                input_html: {
                  data: { address_autocomplete_target: "address" },
                  class: "form-control d-none"
                },
                wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } }
              %>
            </div>

            <!-- Dropoff Field -->
            <div class="form-group mb-4">
              <%= r.label :dropoff, "Dropoff Location", class: "form-label" %>
              <%= r.input :dropoff,
                input_html: {
                  data: { address_autocomplete_target: "address" },
                  class: "form-control d-none"
                },
                wrapper_html: { data: { controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"] } }
              %>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
              <%= r.submit "Request Ride", class: "btn btn-primary btn-lg px-5 py-3 shadow-lg rounded-pill fw-bold" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

