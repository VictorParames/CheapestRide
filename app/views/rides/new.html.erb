  <div class="container text-center">
    <!-- Social Links -->
    <div>
      <a href="https://www.facebook.com" class="text-white mx-2" target="_blank" title="Facebook">
        <i class="fab fa-facebook fa-2x"></i>
      </a>
      <a href="https://www.twitter.com" class="text-white mx-2" target="_blank" title="Twitter">
        <i class="fab fa-twitter fa-2x"></i>
      </a>
      <a href="https://www.linkedin.com" class="text-white mx-2" target="_blank" title="LinkedIn">
        <i class="fab fa-linkedin fa-2x"></i>
      </a>
      <a href="https://www.instagram.com" class="text-white mx-2" target="_blank" title="Instagram">
        <i class="fab fa-instagram fa-2x"></i>
      </a>
    </div>

