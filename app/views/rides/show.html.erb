<div class="show-container">
  <!-- Seção Origem - Destino -->
  <header class="route-header">
    <h1 class="route-title" style="color: #333;"><%= @pickup_location %> - <%= @dropoff_location %></h1>
    <p style="color: #333;">Distância total: <%= @distance %> km, Duração total: <%= @duration %> minutos</p>
  </header>

  <!-- Seção Possibilidades -->
  <section class="options-section">
    <h2 class="options-title" style="color: #333;">Possibilidades</h2>

    <!-- Card Uber -->
    <% if @uber_price && @uber_price > 0 %>
      <div class="option-card">
        <div class="option-details">
          <div class="option-icon-title">
            <i class="fa-solid fa-car option-icon"></i>
            <span class="option-title" style="color: yellow;">Uber</span>
          </div>
          <span class="option-price" style="color: yellow;">R$ <%= number_to_currency(@uber_price, unit: "", separator: ",", delimiter: "") %></span>
        </div>
      </div>
    <% else %>
      <p>Preço do Uber não disponível no momento.</p>
    <% end %>

    <!-- Card 99 -->
    <% if @ninetynine_price && @ninetynine_price > 0 %>
      <div class="option-card">
        <div class="option-details">
          <div class="option-icon-title">
            <i class="fa-solid fa-car option-icon"></i>
            <span class="option-title" style="color: yellow;">99</span>
          </div>
          <span class="option-price" style="color: yellow;">R$ <%= number_to_currency(@ninetynine_price, unit: "", separator: ",", delimiter: "") %></span>
        </div>
      </div>
    <% else %>
      <p>Preço do 99 não disponível no momento.</p>
    <% end %>

    <!-- Card InDrive -->
    <% if @indrive_price && @indrive_price > 0 %>
      <div class="option-card">
        <div class="option-details">
          <div class="option-icon-title">
            <i class="fa-solid fa-car option-icon"></i>
            <span class="option-title" style="color: yellow;">InDrive</span>
          </div>
          <span class="option-price" style="color: yellow;">R$ <%= number_to_currency(@indrive_price, unit: "", separator: ",", delimiter: "") %></span>
        </div>
      </div>
    <% else %>
      <p>Preço do InDrive não disponível no momento.</p>
    <% end %>

    <!-- Card Metrô -->
    <% if @metro_price && @metro_price > 0 %>
      <div class="option-card">
        <div class="option-details">
          <div class="option-icon-title">
            <i class="fa-solid fa-train-subway option-icon"></i>
            <span class="option-title" style="color: yellow;">Metrô</span>
          </div>
          <span class="option-price" style="color: yellow;">R$ <%= number_to_currency(@metro_price, unit: "", separator: ",", delimiter: "") %></span>
        </div>
      </div>
    <% else %>
      <p>Preço do Metrô não disponível no momento.</p>
    <% end %>
  </section>

  <!-- Mapa -->
  <div data-controller="map" id="map" class="map-container whole-map"
       data-map-origin-value="<%= @origin.to_json %>"
       data-map-destination-value="<%= @destination.to_json %>"
       data-map-drive-value="<%= @drive_polyline %>"
       data-map-transit-value="<%= @transit_polyline %>"
       data-map-key-value="<%= ENV["MAPS_KEY"] %>">
  </div>
</div>

