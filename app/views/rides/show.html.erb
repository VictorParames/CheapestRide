<!-- show.html.erb -->
<div class="show-container">
  <!-- Seção Origem - Destino -->
  <div class="route-header">
    <h1>Origem - Destino</h1>
    <p><%= @origin %> - <%= @destination %></p>
  </div>

  <!-- Seção Possibilidades (apenas Uber) -->
  <div class="options-section">
    <h2>Possibilidades</h2>
    <div class="option-card">
      <div class="option-details">
        <span class="option-title">Uber</span>
        <span class="option-price">R$ 40</span>
      </div>
    </div>
  </div>

  <!-- Mapa -->
  <div data-controller="map" id="map" class="map-container"
       data-map-origin-value="<%= @origin.to_json %>"
       data-map-destination-value="<%= @destination.to_json %>"
       data-map-key-value="<%= ENV["MAPS_KEY"] %>">
  </div>
</div>

