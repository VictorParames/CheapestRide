<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="container p-4 bg-white rounded shadow" style="max-width: 350px;">
        <!-- Origem → Destino Button -->
        <button class="btn btn-primary w-100 fw-bold rounded-pill mb-3">Origem → Destino</button>

        <!-- Uber Info Section -->
        <div class="mt-3 p-3 bg-purple text-black rounded">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0 fw-bold">Uber</h5>
                <span class="fw-bold">R$ 80</span>
            </div>

            <!-- Route Information -->
            <div class="mb-3">
                <h6 class="fw-bold text-uppercase">Rota de Origem:</h6>
                <p class="mb-0 text-black"><%= @ride.pickup.presence || 'Pickup não disponível' %></p>
            </div>

            <div class="mb-3">
                <h6 class="fw-bold text-uppercase">Rota de Destino:</h6>
                <p class="mb-0 text-black"><%= @ride.dropoff.presence || 'Dropoff não disponível' %></p>
            </div>
        </div>

        <!-- Time Information -->
        <div class="mb-3">
            <p class="text-black text-center mb-0"><strong>Tempo estimado: 30 min</strong></p>
        </div>

        <!-- Buttons Section -->
        <div class="mt-3 d-flex justify-content-between">
            <button class="btn btn-primary w-50 fw-bold rounded-pill me-2" onclick="window.history.back()">Voltar</button>
            <button class="btn btn-primary w-50 fw-bold rounded-pill" onclick="redirectToUber()">Redirecionar</button>
        </div>
    </div>

    <script>
        function redirectToUber() {
            window.location.href = "uber://";
            setTimeout(function() {
                window.location.href = "https://www.uber.com/";
            }, 1500); // Redireciona para o site se o app não estiver instalado
        }
    </script>
</body>
