<div class="d-flex justify-content-center align-items-center min-vh-100 bg-success">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        <div class="text-center bg-white p-5 rounded-4 shadow-lg position-relative d-flex flex-column align-items-center">
          <h2 class="text-center text-primary mb-3">Bora?</h2>
          <p class="text-center text-secondary mb-4">Sign in to continue</p>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.input :email, required: false, autofocus: true, placeholder: "Email",
                label_html: { class: "text-black" },
                input_html: { class: "form-control input-style py-2 rounded-3 text-black" } %>
            </div>
            <div class="mb-3">
              <%= f.input :password, required: false, placeholder: "••••••",
                label_html: { class: "text-black" },
                input_html: { class: "form-control input-style py-2 rounded-3 text-black" } %>
            </div>
            <div class="form-check mb-3">
              <%= f.input :remember_me, as: :boolean, label: "Remember me",
                label_html: { class: "text-black" },
                input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, "Log in", class: "btn btn-primary fw-bold py-2 rounded-3 shadow-sm btn-hover" %>
            </div>
            <div class="text-center mt-3">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
